
<div class="box">

  <div class="box-header">
    <h3 class="box-title">Корпоративные номера</h3>
  </div>

  <div class="box-body">

    <table class="table table-bordered table-condensed tablesorter" id="tbl_adresses">
      <thead>
      <tr>
        <th data-placeholder="" class="filter-match col-md-1">Номер</th>
        <th data-placeholder="" class="filter-match col-md-2">ФИО</th>
        <th data-placeholder="" class="filter-match col-md-2">Должность</th>
        <th data-placeholder="" class="filter-match col-md-2">Отдел</th>
        <th data-placeholder="" class="filter-match col-md-1">Организация</th>

      </tr>
      </thead>

      <tbody>

      <% @form_data[:corp_numbers].each do |corp_number| %>
          <% address = AddressBookCorp.find_by_id(corp_number.address_book_corp_id) %>



          <% if address.fio.nil? %>
              <tr>
                <td><%= corp_number.id%> - <%= corp_number.number%></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>

              </tr>



          <% else %>

              <tr>
                <td><%= corp_number.number%></td>
                <td><%= address.fio %></td>
                <td><%= address.position%></td>
                <td><%= address.department%></td>
                <td><%= address.organisation%> (<%= address.address%>)</td>

              </tr>

          <% end %>








      <% end %>


      </tbody>

    </table>


  </div>

</div>


