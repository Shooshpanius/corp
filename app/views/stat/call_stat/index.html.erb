<%= javascript_include_tag "main" %>
<%= javascript_include_tag "stat/call_stat" %>

<div class="panel panel-info">

  <div class="panel-heading">
    <div class="panel-title">
      Статистика вызовов

      <div id="pager" class="pager  pull-right" style="margin:0px; border:0px; padding:0px; width:700px;">
        <form>
          <%= image_tag "first.png", :class => "first" %>
          <%= image_tag "prev.png", :class => "prev" %>
          <input type="text" class="pagedisplay"/>
          <%= image_tag "next.png", :class => "next" %>
          <%= image_tag "last.png", :class => "last" %>
          <select class="pagesize">
            <option selected="selected"  value="20">20</option>
            <option value="50">50</option>
            <option value="100">100</option>
            <option value="200">200</option>
          </select> Rows
        </form>
      </div>


    </div>
  </div>

  <div class="panel-body">

    <table class="table table-bordered table-condensed tablesorter" id="tbl_callstat" name="tbl_callstat">
      <thead>
          <tr>
            <th data-placeholder="" class="filter-match col-md-2">Дата/время н</th>
            <th data-placeholder="" class="filter-match col-md-2">Дата/время к</th>
            <th data-placeholder="" class="filter-match col-md-1">От</th>
            <th data-placeholder="" class="filter-match col-md-1">К</th>
            <th data-placeholder="" class="filter-match col-md-1">T общ./T разг.</th>
            <th data-placeholder="" class="filter-match col-md-1">Результат</th>
            <th data-placeholder="" class="filter-match col-md-1">ID</th>
            <th data-placeholder="" class="filter-match col-md-2">Audio</th>
          </tr>
      </thead>

      <tbody>
          <% @form_data[:calls].each do |call| %>
              <tr>
                <td><%= call.calldate %></td>
                <td><%= call.calldate_end %></td>
                <td><%= call.src %></td>
                <td><%= call.dst %></td>
                <td><%= call.duration %> / <%= call.billsec %></td>
                <td><%= call.disposition %></td>
                <td><%= call.uniqueid %></td>
                <td><audio controls></audio></td>
              </tr>
          <% end %>
      </tbody>

    </table>

  </div>

</div>
