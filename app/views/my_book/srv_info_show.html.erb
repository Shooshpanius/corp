  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Информация о контакте</h4>
      </div>
      <div class="modal-body">

        <form class="form-horizontal" role="form" id="my_book_info" name="my_book_info">
          <fieldset>



            <div class="form-group">
              <label for="org" class="col-sm-3 control-label">Организация</label>
              <div class="col-sm-7" style="padding-top: 6px">
                <%= @form_data[:my_book].organisation %>
              </div>
            </div>

            <div class="form-group">
              <label for="dep" class="col-sm-3 control-label">Отдел</label>
              <div class="col-sm-7" style="padding-top: 6px">
                <%= @form_data[:my_book].department %>
              </div>
            </div>

            <div class="form-group">
              <label for="pos" class="col-sm-3 control-label">Должность</label>
              <div class="col-sm-7" style="padding-top: 6px">
                <%= @form_data[:my_book].position %>
              </div>
            </div>

            <div class="form-group">
              <label for="fio" class="col-sm-3 control-label">ФИО</label>
              <div class="col-sm-7" style="padding-top: 6px">
                <%= @form_data[:my_book].fio %>
              </div>
            </div>

            <div class="form-group">
              <label for="e_phone_1" class="col-sm-3 control-label">Телефон осн.</label>
              <div class="col-sm-7" style="padding-top: 6px">
                (+7)<%= @form_data[:my_book].phone_1 %>
                #<%= @form_data[:my_book].phone_1_add %>
              </div>
            </div>

            <div class="form-group">
              <label for="e_phone_2" class="col-sm-3 control-label">Телефон доп.</label>
              <div class="col-sm-7" style="padding-top: 6px">
                (+7)<%= @form_data[:my_book].phone_2 %>
                #<%= @form_data[:my_book].phone_2_add %>
              </div>
            </div>

            <div class="form-group">
              <label for="email_1" class="col-sm-3 control-label">E-mail осн.</label>
              <div class="col-sm-7" style="padding-top: 6px">

                <%= @form_data[:my_book].email_1 %>
              </div>
            </div>

            <div class="form-group">
              <label for="email_2" class="col-sm-3 control-label">E-mail доп.</label>
              <div class="col-sm-7" style="padding-top: 6px">

                <%= @form_data[:my_book].email_2 %>
              </div>
            </div>

            <div class="form-group">
              <label for="address" class="col-sm-3 control-label">Адрес</label>
              <div class="col-sm-7" style="padding-top: 6px">
                <%= @form_data[:my_book].address %>
              </div>
            </div>

            <div class="form-group">
              <label for="comment" class="col-sm-3 control-label">Комментарий</label>
              <div class="col-sm-7" style="padding-top: 6px">
                <%= @form_data[:my_book].comment %>
              </div>
            </div>

          </fieldset>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
          </div>
        </form>

      </div>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->

