
<%= javascript_include_tag "main" %>
<%= javascript_include_tag "mailadmin/aliases" %>


<div class="box">

  <div class="box-header">
    <h3 class="box-title">Почтовые алиасы</h3>
    <button type="button"  class="btn btn-success pull-right" data-toggle="modal" data-target="#addAliasModal"><i class="fa fa-plus"></i></button>
  </div>




  <div class="box-body">

    <table class="table table-bordered table-condensed tablesorter" id="tbl_adresses">
      <thead>

      <tr>
        <th data-placeholder="" class="filter-match col-md-1">id</th>
        <th data-placeholder="" class="filter-match col-md-9">Алиас</th>
        <th data-placeholder="" class="filter-match col-md-2"></th>

      </tr>

      </thead>

      <tbody>
      <% @form_data[:aliases].each.with_index do |al, index| %>
          <tr id="r_<%= al.id %>">

            <td></td>
            <td></td>
            <td></td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>

</div>
