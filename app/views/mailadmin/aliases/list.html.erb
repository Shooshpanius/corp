
<%= javascript_include_tag "main" %>
<%= javascript_include_tag "mailadmin/aliases" %>


<div class="box">

  <div class="box-header">
    <h3 class="box-title">Почтовые алиасы</h3>
    <button type="button"  class="btn btn-success pull-right" data-toggle="modal" data-target="#addAliasModal"><i class="fa fa-plus"></i></button>
  </div>




  <div class="box-body">

    <table class="table table-bordered table-condensed tablesorter" id="tbl_adresses">
      <thead>

      <tr>
        <th data-placeholder="" class="filter-match col-md-1">id</th>
        <th data-placeholder="" class="filter-match col-md-9">Алиас</th>
        <th data-placeholder="" class="filter-match col-md-2"></th>

      </tr>

      </thead>

      <tbody>
      <% @form_data[:aliases].each.with_index do |al, index| %>
          <tr id="r_<%= al.id %>">

            <td><%= al.id %></td>
            <td><%= al.alias %></td>
            <td></td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>

</div>


<div class="modal fade" id="addAliasModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Новый алиас</h4>
      </div>
      <div class="modal-body">

        <form class="form-horizontal" role="form" id="alias_new" name="alias_new">
          <fieldset>

            <div class="form-group">
              <label for="Alias" class="col-sm-2 control-label">Алиас</label>
              <div class="col-sm-8">
                <input type="text" class="form-control" id="Alias" name="Alias" placeholder="Alias">
              </div>
            </div>

          </fieldset>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success" onclick="alias_new_save()">Сохранить</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
          </div>
        </form>

      </div>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->

</div><!-- /.modal -->